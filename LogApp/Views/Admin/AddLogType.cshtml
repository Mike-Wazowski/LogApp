
@{
    ViewBag.Title = "AddLogType";
}

<h2>Dodaj nowy typ loga</h2>
<div class="row">
    <div id="alertsWrapper" class="col-md-11"></div>
</div>
<div class="row">
    <div class="col-md-12">
        <h4>Nazwa typu (opcjonalna):</h4>
        <div class="row marginBottom">
            <div class="col-md-11">
                <input id="nameInput" type="text" class="form-control"/>
            </div>
        </div>
        <h4>Domyślne pola:</h4>
        <div class="row marginBottom">
            <div class="col-md-11">
                <input type="text" class="form-control" required="" disabled value="Czas zdarzenia" />
            </div>
        </div>
        <div class="row marginBottom">
            <div class="col-md-11">
                <input type="text" class="form-control" required="" disabled value="Identyfikator źródła zdarzenia" />
            </div>
        </div>
        <h4>Dodatkowe pola:</h4>
        <form id="headersForm" class="form-horizontal" action="#">
            <button id="addFieldButton" class="btn btn-default marginBottom">Dodaj nowe pole</button>
            <div class="inputFieldsWrap">
            </div>
            <div class="col-md-offset-10">
                <button type="submit" class="btn btn-default addLogTypeSaveBtn">Zapisz</button>
            </div>
        </form>
    </div>
</div>
@Scripts.Render("~/bundles/addLogType")